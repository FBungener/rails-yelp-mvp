<div class="container">
  <div class="row">
    <div class="text-center">
      <h3><%= @restaurant.name %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="restaurant_card">
        <p><%= @restaurant.address %></p>
        <p><%= @restaurant.phone_number %></p>
        <p><%= @restaurant.category %></p>
        <%= link_to 'Write a review', new_restaurant_review_path(@restaurant), class: "btn btn-default", style: "font-size: 17px;" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h4>Reviews for <%= @restaurant.name %></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <% @restaurant.reviews.each do |review| %>
        <div class="restaurant_card">
          <p><%= review.content %></p>
          <p><%= review.rating %></p>
        </div>
      <% end %>
    <div>
  </div>
</div>
