<div class="col-sm-6 col-sm-offset-3">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.error_notification %>

    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian", "american", "greek"] %>

    <%= f.button :submit %>
  <% end %>
</div>
